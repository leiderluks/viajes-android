<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:textSize="25dp"
        android:text="AGENCIA DE VIAJES" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/viajes" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Codigo Viajes" />

    <EditText
        android:id="@+id/etCodigoV"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:ems="10"
        android:gravity="center"
        android:hint=" ej. AA12"
        android:inputType="textPersonName" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Nombre Usuario: "
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etNombreU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="ej. lsjujs" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Vuelos"
        android:textSize="20dp" />
    <RadioGroup
        android:layout_marginStart="40dp"
        android:layout_width="match_parent"
        android:layout_height="120dp" >

        <RadioButton
            android:id="@+id/rbPrimeraC"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:checked="true"
            android:textSize="20dp"
            android:text="  Primera Clase" />

        <RadioButton
            android:id="@+id/rbEjecutiva"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="  Clase Ejecutiva" />

        <RadioButton
            android:id="@+id/rbEconomica"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="  Clase Economica" />
    </RadioGroup>
    <CheckBox
        android:id="@+id/cbActivo"
        android:layout_marginStart="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"

        android:text="Activo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAdicionar"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="Adicionar"
            android:text="Adicionar" />

        <Button
            android:id="@+id/btConsultar"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"
            android:onClick="Consultar"
            android:layout_weight="1"
            android:text="Consultar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAnular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:onClick="Anular"
            android:text="Anular" />

        <Button
            android:id="@+id/btLimpiar"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content"
            android:onClick="Limpiar"
            android:layout_weight="1"
            android:text="Limpiar" />
    </LinearLayout>

</LinearLayout>